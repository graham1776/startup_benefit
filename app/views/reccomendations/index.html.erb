<%- model_class = Reccomendation -%>
<div class="page-header">
  <h1><%=t '.title', :default => Reccomendation %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:copy) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:favicon_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reccomendations.each do |reccomendation| %>
      <tr>
        <td><%= reccomendation.id %></td>
        <td><%= reccomendation.name %></td>
        <td><%= reccomendation.copy %></td>
        <td><%= reccomendation.url %></td>
        <td><%= reccomendation.favicon_url %></td>
        <td><%=l reccomendation.created_at, format: :long %></td>
        <td>
          <%= link_to reccomendation_path(reccomendation), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to reccomendation_path(reccomendation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reccomendation_path,
            :class => 'btn btn-primary' %>
