<%- model_class = Reccomendation -%>
<div class="page-header">
  <h1><%=t '.title', :default => Reccomendation %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @reccomendation.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:copy) %></dt>
      <dd><pre class="prettyprint"><%= @reccomendation.copy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @reccomendation.url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:favicon_url) %></dt>
      <dd><pre class="prettyprint"><%= @reccomendation.favicon_url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reccomendations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reccomendation_path(@reccomendation), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reccomendation_path(@reccomendation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

